<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project UmiRx">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar" depends="compile">
        <jar destfile="build/UmiRx.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="umi.rx.UmiRx"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="./bin"/>
			<zipfileset excludes="META-INF/*.SF" src="lib/htsjdk-2.23.0.jar"/>
			<zipfileset excludes="META-INF/*.SF" src="lib/commons-cli-1.4.jar"/>
        </jar>
    </target>

	<target name="clean">
		<delete dir="bin"/>
		<mkdir dir="bin"/>
	</target>

	<target name="compile" depends="clean">
		<javac 
			srcdir="src" 
			destdir="bin" 
			debug="true" 
			source="12"
			target="12"
			includeantruntime="false" 
			classpath="lib/htsjdk-2.23.0.jar:lib/commons-cli-1.4.jar"
		/>
	</target>
</project>

